{
  "name": "@football-tracker/extension",
  "version": "1.0.0",
  "description": "Chrome Extension to track live football match results",
  "type": "module",
  "scripts": {
    "setup": "node scripts/setup-icons.cjs",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "postinstall": "node scripts/setup-icons.cjs"
  },
  "dependencies": {
    "@football-tracker/shared": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@types/chrome": "^0.0.260",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  }
}
