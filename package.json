{
  "name": "@football-tracker/root",
  "version": "1.0.0",
  "private": true,
  "description": "Football Tracker - Monorepo for Chrome Extension, Mobile App, and Backend",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev:extension": "pnpm --filter @football-tracker/extension dev",
    "build:extension": "pnpm --filter @football-tracker/extension build",
    "dev:mobile": "pnpm --filter @football-tracker/mobile start",
    "dev:backend": "pnpm --filter @football-tracker/backend dev",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@esbuild/win32-x64"
    ]
  }
}
