{
  "name": "@football-tracker/root",
  "version": "1.0.0",
  "private": true,
  "description": "Football Tracker - Monorepo for Chrome Extension, Mobile App, and Backend",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "dev:extension": "pnpm --filter @football-tracker/extension dev",
    "build:extension": "pnpm --filter @football-tracker/extension build",
    "dev:mobile": "pnpm --filter @football-tracker/mobile start",
    "dev:backend": "pnpm --filter @football-tracker/backend dev",
    "build": "pnpm -r build",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  }
}
